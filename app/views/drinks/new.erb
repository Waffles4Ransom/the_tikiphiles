<h2>Create a new drink:</h2>

<p class="errors"><%= @error if @error%></p>

<form action="/drinks" method="POST">
  <p>
    <label for="name">Drink Name:</label>
    <input type="text" name="name" id="name">
  </p>
  <p>
    <label for="bar">Bar Name:</label>
    <input type="text" name="bar" id="bar">
  </p>
  <p>
    <label for="location">Location:</label>
    <input type="text" name="location" id="location" value="ex: Denver, CO">
  </p>
  <label for="rating">Rating:</label><br>
    <ul>
      <li><input type="radio" name="rating" value="0" checked> 0 (SWILL!, never again)</li>
      <li><input type="radio" name="rating" value="1" checked> 1</li>
      <li><input type="radio" name="rating" value="2" checked> 2</li>
      <li><input type="radio" name="rating" value="3" checked> 3</li>
      <li><input type="radio" name="rating" value="4" checked> 4</li>
      <li><input type="radio" name="rating" value="5" checked> 5</li>
      <li><input type="radio" name="rating" value="6" checked> 6</li>
      <li><input type="radio" name="rating" value="7" checked> 7</li>
      <li><input type="radio" name="rating" value="8" checked> 8</li>
      <li><input type="radio" name="rating" value="9" checked> 9</li>
      <li><input type="radio" name="rating" value="10" checked> 10 out of 10 would drink again!</li>
    </ul>
  <input type="submit" value="Upload Drink">
</form>